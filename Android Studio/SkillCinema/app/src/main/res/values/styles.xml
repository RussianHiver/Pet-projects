<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedSquare">
        <item name="cornerSize">5dp</item>
    </style>
    
    
    <style name="CustomChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_state_background</item>
        <item name="android:textColor">@color/chip_state_text</item>
    </style>

    <style name="CustomMaterialButton" parent="Widget.Material3.Button">
         <item name="backgroundTint">@color/chip_state_background</item>
        <item name="android:textColor">@color/chip_state_text</item>
    </style>

    <style name="CustomRangeSlider" parent="Widget.Material3.Slider">
        <item name="thumbColor">@color/blue_color</item>
        <item name="trackColorActive">@color/blue_color</item>
        <item name="trackColorInactive">@color/white</item>
        <item name="tickColorActive">@color/white</item>
        <item name="tickColorInactive">@color/blue_color</item>
    </style>

    <style name="CustomBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@null</item>
    </style>
    
    <style name="CustomMaterialAlertDialog" parent="MaterialAlertDialog.Material3">
        <item name="backgroundColor">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">15dp</item>
        <item name="backgroundTint">@color/blue_color</item>
    </style>

</resources>